root = true

[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Dockerfile
[Dockerfile]
indent_style = tab
indent_size = 4

# JSON
[*.json]
indent_style = space
indent_size = 2

# Lua
[*.lua]
indent_style = space
indent_size = 2

# Markdown
[*.md]
# So that a dev can add actual tab characters easily if needed.
indent_style = tab
indent_size = unset

# Nix
[*.nix]
indent_style = space
indent_size = 2

# PowerShell
[*.ps1]
end_of_line = CRLF
indent_style = space
indent_size = 4

# Python
[*.py]
indent_style = space
indent_size = 4

# Rust
[*.rs]
indent_style = space
indent_size = 4

# Shell
[*.sh]
indent_style = tab

# TOML
[*.toml]
indent_style = space
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
