{
  "name": "With Nix",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": { "VARIANT": "1" }
  },
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "rust-lang.rust-analyzer",
        "sumneko.lua",
        "tomoyukim.vscode-mermaid-editor"
      ]
    }
  },
  "onCreateCommand": "./scripts/setup-git.sh",
  "remoteUser": "vscode"
}
